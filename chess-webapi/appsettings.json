{
	"AppSettings": {
	},
	"Serilog": {
		"Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Async" ],
		"MinimumLevel": "Verbose",
		"WriteTo": [
			{
				"Name": "Async",
				"Args": {
					"configure": [
						{
							"Name": "File",
							"Args": {
								"path": "Logs/log.txt",
								"outputTemplate": "{Timestamp:o} [{Level}] {Application}{NewLine}{SourceContext}{NewLine}    {Message}{NewLine}{Exception}",
								"rollingInterval": "Day"
							}
						}
					]
				}
			}
		],
		"Enrich": [
			"FromLogContext",
			"WithMachineName",
			"WithThreadId"
		],
		"Properties": {
			"Application": "chess-engine-tests"
		}
	},
	"AllowedHosts": "*"
}